{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    //"outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@useCases/*": ["useCases/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
